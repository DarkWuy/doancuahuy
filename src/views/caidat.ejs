    <%- include('menu') %>
    <div class="container">
        <div class="profile">
            <img src="/anh/tk.jpg" alt="Avatar" class="avatar">
            <div class="details">
                <div class="name"><%= hoten %></div>
                <div class="email"><%= email %></div>
            </div>
        </div>
        <div class="info">
            <div class="info-item">
                <div class="info-label">Số điện thoại:</div>
                <div class="info-value"><%= sodienthoai %></div>
            </div>
            <div class="info-item">
                <div class="info-label">Địa chỉ:</div>
                <div class="info-value"><%= diachi %></div>
            </div>
            <div class="info-item">
                <div class="info-label">Ngày sinh:</div>
                <div class="info-value"><%= ngaysinh %></div>
            </div>
            <div class="info-item">
                <div class="info-label">Giới tính:</div>
                <div class="info-value"><%= gioitinh %></div>
            </div>
        </div>
        <a href="/dangxuat" class="logout">Đăng xuất</a>
    </div>
    
