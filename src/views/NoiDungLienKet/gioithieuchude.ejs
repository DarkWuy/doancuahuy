    <section id="topic1" class="topic">
        <h2>Chủ Đề 1: COMPUTER USERS</h2></p>
    </section>
    <section id="topic2" class="topic">
        <h2>Chủ Đề 2: NETWORKS</h2>

    </section>
    <section id="topic3" class="topic">
        <h2>Chủ Đề 3: THE INTERNET</h2>
    </section>
    <section id="topic4" class="topic">
        <h2>Chủ Đề 4: THE WEBSITES</h2>
    </section>
</div>
    <script>
        const topicLinks = document.querySelectorAll('.topic-link');
        const topics = document.querySelectorAll('.topic');

        topicLinks.forEach((link, index) => {
            link.addEventListener('click', () => {
                // Ẩn tất cả các chủ đề
                topics.forEach(topic => {
                    topic.style.display = 'none';
                });
                // Hiển thị chủ đề tương ứng khi được click
                topics[index].style.display = 'block';
            });
        });
    </script>
</body>
